{
  "name": "Aurora Time",
  "type": "expo",
  "version": "1.0.0",
  "node": "18.x",
  "build": {
    "command": "eas build --platform android",
    "directory": "./"
  },
  "start": {
    "command": "npx expo start --tunnel"
  },
  "environment": {
    "EXPO_TOKEN": "your_expo_token_here",
    "EAS_PROJECT_ID": "aurora-time",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "postbuild": {
    "command": "npx expo publish --non-interactive"
  },
  "notifications": {
    "onSuccess": "Build completed successfully üéâ",
    "onFailure": "‚ùå Build failed ‚Äî check Expo logs"
  }
}

